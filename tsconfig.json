{
	"compilerOptions": {
		"sourceMap": true,
    	"module": "esnext",
		"jsx": "react",
		"allowSyntheticDefaultImports": true,    // that is probably the important one
		"esModuleInterop": true,                 // this also
		"moduleResolution": "node",
		"noEmit": false,
		"strict": false,
		"target": "es2020",

		"lib": [
			"DOM",
			"ES6",
			"ES2020"
    	],
		"types": [
			"@league-of-foundry-developers/foundry-vtt-types",
			"@types/cytoscape"
		]
	}
}
